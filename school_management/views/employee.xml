<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="employee_details_form_view" model="ir.ui.view">
            <field name="name">employee.details.form.view</field>
            <field name="model">employee.details</field>
            <field name="arch" type="xml">
                <form string="Employees">
                    <sheet>
                        <field name="emp_image" widget="image" class="oe_avatar"/>
                        <group>
                            <field name="emp_name"/>
                            <field name="emp_phone_number"/>
                            <field name="emp_work_exp"/>
                            <field name="emp_city"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="employee_details_tree_view" model="ir.ui.view">
            <field name="name">employee.details.tree.view</field>
            <field name="model">employee.details</field>
            <field name="arch" type="xml">
                <tree string="Employees">
                    <field name="emp_name"/>
                    <field name="emp_phone_number"/>
                    <field name="emp_work_exp"/>
                    <field name="emp_city"/>
                </tree>
            </field>
        </record>


        <record id="employee_details_action" model="ir.actions.act_window">
            <field name="name">Employees</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.details</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No Employees yet!
              </p><p>
                Please add a new Employee!
              </p>
            </field>
        </record>

        <menuitem id = "employee_root_menu"
        name = "Employee List"
        sequence = "20"
        parent = "website.menu_website_configuration"/>

        <menuitem id="employee_details_menu"
        name="Employee Details"
        sequence="1"
        parent="employee_root_menu"
        action="school_management.employee_details_action"/>

    </data>
</odoo>